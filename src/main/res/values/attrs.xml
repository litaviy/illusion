<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RectangleImageView">
        <attr name="partsOfWidth" format="enum">
            <enum name="oneParts" value="1"/>
            <enum name="twoParts" value="2"/>
            <enum name="treeParts" value="3"/>
            <enum name="fourParts" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="IconTextView">
        <attr name="titleText" format="reference|string"/>
        <attr name="titleSize" format="dimension"/>
        <attr name="titleColor" format="color"/>
        <attr name="iconSize" format="dimension"/>
        <attr name="iconSource" format="reference"/>
        <attr name="iconMargin" format="dimension"/>
        <attr name="iconGravity" format="enum">
            <enum name="end" value="1"/>
            <enum name="start" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="textCaps" format="boolean"/>
        <attr name="text" format="reference|string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="progressSize" format="dimension"/>
        <attr name="progressGravity" format="enum">
            <enum name="end" value="1"/>
            <enum name="start" value="2"/>
            <enum name="center" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BetterHashtagTextView">
        <attr name="hasgtagColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">

        <attr name="trimLength" format="integer"/>

        <attr name="behavior" format="enum">
            <enum name="text" value="1"/>
            <enum name="expander" value="2"/>
        </attr>

        <attr name="expanderType" format="enum">
            <enum name="icon" value="1"/>
            <enum name="text" value="2"/>
            <enum name="both" value="3"/>
        </attr>

        <attr name="expanderOpenText" format="reference|string"/>
        <attr name="expanderCloseText" format="reference|string"/>

        <attr name="expanderOpenTextColor" format="reference|color"/>
        <attr name="expanderCloseTextColor" format="reference|color"/>

        <attr name="expanderIconSize" format="enum">
            <enum name="small" value="1"/>
            <enum name="medium" value="2"/>
            <enum name="large" value="3"/>
        </attr>

        <attr name="expanderGravity" format="enum">
            <enum name="start" value="1"/>
            <enum name="center" value="2"/>
            <enum name="end" value="3"/>
        </attr>

        <attr name="expanderPosition" format="enum">
            <enum name="new_line" value="1"/>
            <enum name="inner_line" value="2"/>
        </attr>

    </declare-styleable>

</resources>